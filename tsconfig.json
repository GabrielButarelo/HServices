{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"rootDir": "./",
		"allowJs": true,
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
